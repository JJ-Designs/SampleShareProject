@model SampleShareV1.Models.Users

@{
    ViewBag.Title = "EditMyProfile";
    ViewBag.ConfrimPass = null;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <body class="backgroundimg">
        <div class="container emp-profile">
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-img">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS52y5aInsxSm31CvHOFHWujqUx_wWTS9iM6s7BAm21oEN_RiGoog" alt="" />
                        <div class="file btn btn-lg btn-secondary">
                            Change Profile Picture
                            <input type="file" name="file" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="profile-head">
                        <h5>

                            @Html.DisplayFor(model => model.FullName)
                        </h5>
                        <h6>
                            @Html.DisplayFor(model => model.Profession)
                        </h6>
                        <p class="proile-rating">SUBSCRIPTION: <span>@Html.DisplayFor(model => model.Userright.userrightCategory)</span></p>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#password" role="tab" aria-controls="profile" aria-selected="false">Password</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-2">
                    <input type="submit" class="profile-edit-btn" name="btnAddMore" value="Save" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-work">
                        <p>LATEST</p>
                        <a href="">[Audio-Sample 1]</a><br />
                        <a href="">[Audio-Sample 2]</a><br />
                        <a href="">[Audio-Sample 3]</a>
                        <p>MOST DOWNLOADED</p>
                        <a href="">[Audio-Sample 1]</a><br />
                        <a href="">[Audio-Sample 2]</a><br />
                        <a href="">[Audio-Sample 3]</a><br />
                        <a href="">[Audio-Sample 4]</a><br />
                        <a href="">[Audio-Sample 5]</a><br />
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="tab-content profile-tab" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Username:</label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Name:</label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>E-mail:</label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Profession:</label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        @Html.EditorFor(model => model.Profession, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Profession, "", new { @class = "text-danger" })
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Your Bio:</label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        @Html.EditorFor(model => model.Discriptions, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Discriptions, "", new { @class = "text-danger" })
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                </div>
                                <div class="col-md-6">
                                    <input type="button" class="profile-delete-btn" onclick="location.href='@Url.Action("DeleteUserAndFiles","Main", new {UserIDFromURL = Model.UserID })'" value="Delete Account"/>
                                        <label class="disclamerLabel">All uploaded samples will also be deleted.</label>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="password" role="tabpanel" aria-labelledby="profile-tab">
                            <div class="row">
                                <div class="col-md-6">
                                    <label><p>Change Password:</p></label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>New Password:</label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @type = "password", @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Confirm Password:</label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        @*@Html.EditorFor(ViewBag.ConfrimPass, new { htmlAttributes = new { @type = "password", @class = "form-control" } })
                                        @Html.ValidationMessageFor(ViewBag.ConfrimPass, "", new { @class = "text-danger" })*@
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
