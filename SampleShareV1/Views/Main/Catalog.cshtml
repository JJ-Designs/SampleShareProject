@model IEnumerable<SampleShareV1.Models.AudioSamples>
@{
    ViewBag.Title = "Catalog";
}
<nav class="bg-white navbar-expand-md navbar navbar-light navbar-expand-md justify-content-center"
     style="-webkit-box-shadow: 10px 18px 39px -11px rgba(0,0,0,0.75);
    -moz-box-shadow: 10px 18px 39px -11px rgba(0,0,0,0.75);
    box-shadow: 10px 18px 39px -11px rgba(0,0,0,0.75);">
    <ul class="nav">
        @foreach (var item in ViewBag.Categories)
        {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @item.CategoryName
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </li>
        }


    </ul>
</nav>
<div class="row ">
    @foreach (var item in Model)
    {
        <div class="col-sm-4" style="margin-top:20px;">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@item.SampleTitel</h4>
                    <p class="card-text"><i class="fas fa-user"></i><a href="#"><b>  @item.Users.UserName</b></a></p>
                    <audio class="embed-responsive-item" controls controlsList="nodownload">
                        <source class="card-title" src="~/samples/@Url.Content(item.FilePath)" type="audio/mpeg">
                        Your browser does not support the audio element.
                    </audio>
                    <p class="card-text">Tags: <i>Sound, Effect, Audio </i></p>
                    <a href="@Url.Action("Download","Main",new { AudioSampleIDFromURL = item.SampleID })" class="btn btn-primary"><i class="fas fa-download"></i> Download</a>
                    <a href="@Url.Action("","", new { id = item.SampleID})" class="btn btn-outline-dark">More</a>
                </div>
            </div>
        </div>
    }
</div>
