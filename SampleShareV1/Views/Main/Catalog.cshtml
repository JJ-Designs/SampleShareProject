@model IEnumerable<SampleShareV1.Models.AudioSamples>
@{
    ViewBag.Title = "Catalog";
}
<nav class="bg-white navbar-expand-md navbar navbar-light navbar-expand-md justify-content-center"
     style="-webkit-box-shadow: 10px 18px 39px -11px rgba(0,0,0,0.75);
    -moz-box-shadow: 10px 18px 39px -11px rgba(0,0,0,0.75);
    box-shadow: 10px 18px 39px -11px rgba(0,0,0,0.75);">
    <ul class="nav">
        @foreach (var item in ViewBag.Categories)
        {
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Catalog","Main", new { CategoryID = item.CategoryID })" role="button" aria-haspopup="true" aria-expanded="false">
                    @item.CategoryName
                </a>
            </li>
        }


    </ul>
</nav>
<div class="row ">
    @foreach (var item in Model)
    {
        <div class="col-sm-4" style="margin-top:20px;">
            <div class="card">

                <div class="card-body">

                    <div class="allign">
                        <button id="playpause" class="circle btn btn-primary">
                            <i class="fa fa-play"></i>
                        </button>
                    </div>
                    <div class="allign">
                        <h4 class="card-title">@item.SampleTitel</h4>
                        <p style="margin-top: -2vh;" class="card-text"><i class="fas fa-user"></i><a href="@Url.Action("MyProfile","Main",new { UserIDFromURL = item.UserID })"><b> @item.Users.UserName</b></a></p>
                    </div>

                    <div id="waveform">
                        <audio id="song" style="display: none" preload="false" src="https://sampleshare.blob.core.windows.net/samples/@item.FilePath"></audio>
                    </div>

                    <p class="card-text">Tags: <i>Sound, Effect, Audio </i></p>
                    <a href="@Url.Action("Download","Main",new { AudioSampleIDFromURL = item.SampleID })" class="btn btn-primary"><i class="fas fa-download"></i> Download</a>
                    <a href="@Url.Action("CatalogSampleDetails","Main", new { SampleID = item.SampleID })" class="btn btn-outline-dark">More</a>
                </div>
            </div>
        </div>
        @*<script type="text/javascript">createwavesurfer('https://sampleshare.blob.core.windows.net/samples/@url.content(item.filepath)');</script>*@
        
    }
</div>
